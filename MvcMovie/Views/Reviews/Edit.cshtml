@model MvcMovie.Models.Reviews

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Review</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReviewsID" />
            <div class="form-group">
                <label asp-for="Reviewer" class="control-label"></label>
                <input asp-for="Reviewer" class="form-control" />
                <span asp-validation-for="Reviewer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review" class="control-label"></label>
                <textarea cols = 50 rows= 5 asp-for="Review" class="form-control"></textarea> 
                <span asp-validation-for="Review" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label hidden asp-for="MovieID" class="control-label"></label>
                <select asp-for="MovieID" class="hidden form-control" asp-items="ViewBag.MovieID"></select>
                <span hidden asp-validation-for="MovieID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller= "Movies" asp-action="Details" asp-route-id="@Model.MovieID" class="btn btn-primary">Back to Movie Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
